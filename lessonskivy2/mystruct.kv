    canvas.before:
        Color:
            rgb: .3, .4, .9
        Rectangle:
            pos: 150, 300
            size: 100, 100

    #color center
    canvas:
        Color:
            rgb: .6, .5, .9
        Rectangle:
            pos: 350, 300
            size: 100, 100
    #color after
    canvas.after:
        Color:
            rgb: .9, .7, 1
        Rectangle:
            pos: 550, 300
            size: 100, 100
