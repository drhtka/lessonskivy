# -*- coding: utf-8 -*-
#:kivy 1.11.0

<GraphicInstr>:
    #цвет до
    canvas.before:
        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: 0, 0
            size: 100, 100
    #середина
    canvas:
        Color:
            rgba: 0, 1, 0, 1
        Rectangle:
            pos: 100, 0
            size: 100, 100
    #после
    canvas.after:
        Color:
            rgba: 0, 0, 1, 1
        Rectangle:
            pos: 200, 0
            size: 100, 100
    #тренируемся относительно чего то в процентах size_hint: .9, .3
    Button:
        text: 'очень длинная кнопка'
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: .9, .3


