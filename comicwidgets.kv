# -*- coding: utf-8 -*-
#:kivy 1.11.0
#comiccreator.py
<StickMan@RelativeLayout>:#когда мы хотим встроиться в систему координат используем относительный виджет
    size_hint: None, None
    size: 48, 48
    canvas:
        #sticky_man
        PushMatrix:
        Line:#head
            circle: 24, 38, 5
        Line:#body
            points: 24, 33, 24, 15
        Line:#right foot
            points: 15, 5, 24,15
        Line:#right foot
            points: 34, 5, 24, 25
        Translate:
            y: 48-8
        Rotate:
            angle: 180
            axis: 1, 0, 0
        Line:#hand left
            points: 14, 5, 24, 15
        Line:#hand right
            points: 34, 5, 24, 15
        PopMatrix

        #sticky_girl
        PushMatrix:
        Line:#head
            circle: 120, 40, 5
        Line:#body
            points: 120,35, 120,20
        Triangle:
            points: 120,25, 110,12, 130,12
        Line:#leftt hand
            points: 110,35, 120,27
        Line:#right hand
            points: 120,27, 130,35
        Line:#right foot
            points: 124, 5, 124,15
        Line:#left foot
            points: 116, 5, 116,15
        Translate:
            y: 48-8
        Rotate:
            angle: 180
            axis: 1, 0, 0
        PopMatrix

<StickCar@RelativeLayout>:
    size_hint: None, None
    size: 48, 48
    canvas:
        #sticky_car
        PushMatrix:
        Line:#wheel_1
            circle: -17, 12, 7
        Line:#wheel_2
            circle: 17, 12, 7
        Line:#body1
            points: 25,60, 25,15
        Line:#body2
            points: 5,60, 5,15
        Line:#body3
            points: -35,40, -35,15
        Line:#up body
            points: -35,40, 25,40
        Line:#down body
            points: -35,15, 25,15
        Line:#roofs
            points: 5,60, 25,60
        Line:#hood_down
            points: 15,15, 45,15
        Line:#hood_up
            points: 25,30, 45,30
        Line:#hood_right
            points: 45,15, 45,30
        Translate:
            y: 48-8
        Rotate:
            angle: 180
            axis: 1, 0, 0
        PopMatrix