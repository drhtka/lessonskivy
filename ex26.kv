# -*- coding: utf-8 -*-
#:kivy 1.11.0
#ex26.py
<Ex26>:
    cols: 2
    #The First
    RelativeLayout:
        canvas.before:
            PushMatrix:
            Color:
                rgb: 1, 0, 0, #red
            Rectangle:
                size: root.width/2, root.height/2
                pos: 0, 0
            Translate:
                xy: root.width/5-20, root.height/5-10
            Ellipse:
                source: 'icb/kivy.jpg'
                size: 101, 101
                pos: 0,0
        canvas:
            PopMatrix:
        Label:
            pos: 0, -80
            markup: True
            text: '[b][size=32sp]Scaled the first[/size][/b]'
    #The Second
    RelativeLayout:
        canvas.before:
            PushMatrix:
            Color:
                rgb: 0, 1, 0, #green
            Rectangle:
                size: root.width/2, root.height/2
                pos: 0, 0
            Translate:
                xy: root.width/5-20, root.height/5-10
            Ellipse:
                source: 'icb/kivy.jpg'
                size: 101, 101
                pos: 0,0
        canvas:
            PopMatrix:
        Label:
            pos: 0, -80
            markup: True
            text: '[b][size=32sp]Scaled the second[/size][/b]'
    #The Third
    RelativeLayout:
        canvas.before:
            PushMatrix:
            Color:
                rgb: 0, 0, 1#blue
            Rectangle:
                size: root.width/2, root.height/2
                pos: 0, 0
            Translate:
                xy: root.width/5-20, root.height/4-20
            Scale:
                xyz: 1.3, 1.3, 0
            Rectangle:
                source: 'icb/kivy.jpg'
                size: 86, 86
                pos: 0, 0
        canvas:
            PopMatrix:
        Label:
            pos: 0, -50
            markup: True
            text: '[b][size=32sp]Scaled the third[/size][/b]'
    #Fourth
    RelativeLayout:
        canvas.before:
            PushMatrix:
            Color:
                rgb: 1, 0, 1#pink
            Rectangle:
                size: root.width/2, root.height/2
                pos: 0, 0
            Translate:
                xy: root.width/5-20, root.height/4-25
            Scale:
                xyz: .7, .7, 0
            Rectangle:
                source: 'icb/kivy.jpg'
                size: 151, 151
                pos: 0, 0
        canvas:
            PopMatrix:
        Label:
            pos: 0, -50
            markup: True
            text: '[b][size=32sp]Scaled the fourth[/size][/b]'




